   "source": [
    "def final_score(subscores: dict,\n",
    "                   deductions_applied,\n",
    "                   category: str,\n",
    "                   weights: dict,\n",
    "                   deduction_table: dict,\n",
    "                   per_code_cap: float,\n",
    "                   cap_fraction: float,\n",
    "                   cap_applies_to: str,\n",
    "                   total_max: float,\n",
    "                   subscores_are_fractions: bool) -> dict:\n",
    "    score_raw = compute_raw_score(subscores, weights, subscores_are_fractions)\n",
    "    pen  = compute_deduction_total(deductions_applied, category, deduction_table,\n",
    "                                   per_code_cap, cap_fraction, cap_applies_to,\n",
    "                                   score_raw, total_max)\n",
    "    score_final = max(0.0, min(total_max, score_raw - pen))\n",
    "    return {\"score_raw\": round(score_raw, 4), \"total_deduction\": round(pen, 4), \"score_final\": round(score_final, 4)}\n",
    "\n",
    "INPUT_PATH  = \"Human scoring/ci_score_human.jsonl\"      \n",
    "OUTPUT_PATH = \"final_score_human_ci.jsonl\"\n",
    "\n",
    "rows_in = []\n",
    "with open(INPUT_PATH, \"r\", encoding=\"utf-8\") as f:\n",
    "    for ln, line in enumerate(f, 1):\n",
    "        line = line.strip()\n",
    "        if not line:\n",
    "            continue\n",
    "        try:\n",
    "            rows_in.append(json.loads(line))\n",
    "        except Exception as e:\n",
    "            print(f\"[WARN] bad JSON at line {ln}: {e}\")\n",
    "\n",
    "rows_out = []\n",
    "for r in rows_in:\n",
    "    cat = r.get(\"category\", \"\")\n",
    "    subs = r.get(\"subscores\") or {}\n",
    " 
    "    deds = r.get(\"deductions_applied\") or []\n",
    "\n",
    "    scored = final_score(\n",
    "        subscores=subs,\n",
    "        deductions_applied=deds,\n",
    "        category=cat,\n",
    "        weights=weights,\n",
    "        deduction_table=deductions,\n",
    "        per_code_cap=per_code_cap,\n",
    "        cap_fraction=cap_fraction,\n",
    "        cap_applies_to=per_code_cap,\n",
    "        total_max=total_max,\n",
    "        subscores_are_fractions=subscores_as_frac\n",
    "    )\n",
    "\n",
    "    r[\"score_raw\"] = scored[\"score_raw\"]\n",
    "    r[\"total_deduction\"] = scored[\"total_deduction\"]\n",
    "    r[\"score_final\"] = scored[\"score_final\"]\n",
    "\n",
    "    if passing_mark is not None:\n",
    "        r[\"decision\"] = 1 if r[\"score_final\"] >= passing_mark else 0\n",
    "\n",
    "    rows_out.append(r)\n",
    "\n",
    "with open(OUTPUT_PATH, \"w\", encoding=\"utf-8\") as f:\n",
    "    for r in rows_out:\n",
    "        f.write(json.dumps(r, ensure_ascii=False) + \"\\n\")\n",
    "\n",
    "print(f\"Wrote {len(rows_out)} rows -> {OUTPUT_PATH}\")"
   ]
  }
