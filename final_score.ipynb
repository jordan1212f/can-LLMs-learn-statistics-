   "outputs": [],
   "source": [
    "def applicable_codes(category: str, all_codes: set) -> set:\n",
    "    if not applicable_deductions:\n",
    "        return set(all_codes)\n",
    "    allowed = []\n",
    "    for code, cats in applicable_deductions.items():\n",
    "        if not cats or category in cats:\n",
    "            allowed.append(code)\n",
    "    return set(c for c in allowed if c in all_codes)\n",
    "\n",
    "def extract_deduction_codes(deductions_applied):\n",
    "    \"\"\"\n",
    "    Extract deduction codes as a list of strings or dicts as they are in my rubiric file\n",
    "    \"\"\"\n",
    "    if deductions_applied is None:\n",
    "        return []\n",
    "    out = []\n",
    "    for item in deductions_applied:\n",
    "        if isinstance(item, str):\n",
    "            out.append(item)\n",
    "        elif isinstance(item, dict):\n",
    "            for k in (\"code\", \"id\", \"key\"):\n",
    "                v = item.get(k)\n",
    "                if isinstance(v, str) and v.strip():\n",
    "                    out.append(v.strip())\n",
    "                    break\n",
    "    return out\n",
    "\n",
    "def compute_raw_score(subscores: dict, weights: dict, subscores_are_fractions: bool) -> float:\n",
    "    c = float(subscores.get(\"correctness\", 0) or 0)\n",
    "    m = float(subscores.get(\"completeness\", 0) or 0)\n",
    "    l = float(subscores.get(\"clarity\", 0) or 0)\n",
    "    if subscores_are_fractions:\n",
    "        c *= float(weights.get(\"correctness\", 0))\n",
    "        m *= float(weights.get(\"completeness\", 0))\n",
    "        l *= float(weights.get(\"clarity\", 0))\n",
    "    return c + m + l\n",
    "\n",
    "def compute_deduction_total(deductions_applied, category: str, deduction_table: dict,\n",
    "                            per_code_cap: float, cap_fraction: float,\n",
    "                            cap_applies_to: str, score_raw: float, total_max: float,\n",
    "                            allow_multiples: bool = False) -> float:\n",
    "\n",
    "    codes_list = extract_deduction_codes(deductions_applied)\n",
    "\n",
    "    all_codes = set(deduction_table.keys())\n",
    "    allowed = applicable_codes(category, all_codes)\n",
    "\n",
    "    iter_codes = codes_list if allow_multiples else sorted(set(codes_list))\n",
    "\n",
    "    penalties = []\n",
    "    for code in iter_codes:\n",
    "        if code in allowed:\n",
    "            pen = float(deduction_table.get(code, 0.0))\n",
    "            pen = min(pen, per_code_cap)\n",
    "            penalties.append(pen)\n",
    "\n",
    "    total_pen = float(sum(penalties))\n",
    "\n",
    "    cap_base = score_raw if cap_applies_to == \"raw\" else total_max\n",
    "    overall_cap = float(cap_fraction) * float(cap_base)\n",
    "    return min(total_pen, overall_cap)\n"
   ]
  },
