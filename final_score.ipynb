    }
   ],
   "source": [
    "\"\"\"Get the following from the rubric YAML:\"\"\"\n",
    "weights     = rubric.get(\"scoring\",{}).get(\"weights\", {})\n",
    "deductions  = rubric.get(\"scoring\",{}).get(\"deductions\", {})\n",
    "caps        = rubric.get(\"scoring\",{}).get(\"caps\", {})\n",
    "per_code_cap = float(caps.get(\"per_deduction_max\", np.inf))\n",
    "cap_fraction = float(caps.get(\"deduction_cap_fraction\", 1.0))\n",
    "\n",
    "applicable_deductions = rubric.get(\"deduction_applicability_codes\", {}) or rubric.get(\"scoring\",{}).get(\"deduction_applicability_codes\", {})\n",
    "\n",
    "\n",
    "total_max = float(sum(weights.values()))\n",
    "weights"
   ]
  },
  {
   "cell_type": "code",
