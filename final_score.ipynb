    "from pathlib import Path\n",
    "import json, yaml\n",
    "import numpy as np\n",
    "import pandas as pd\n",
    "\n",
    "rub_path = 'config/marking_ruberic.yaml'\n",
    "passing_mark = None\n",
    "subscores_as_frac = False \n",
    "cap_application = \"raw\"\n",
    "\n",
    "rubric = yaml.safe_load(Path(rub_path).read_text(encoding=\"utf-8\"))"
   ]
  },
  {
   "cell_type": "code",
